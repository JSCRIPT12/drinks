{
  "name": "drinks",
  "version": "0.0.0-semantically-released",
  "description": "Craft Cocktail Gallery",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/drinks.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/drinks/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "clean": "rimraf .cache ./build ./public/build ./public/sw.js ./**/*.generated.css",
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:fonts": "npm run generate:fonts",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs --bundle ./server/index.ts --outdir=build/server",
    "build:worker": "esbuild --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"' ./app/entry.worker.ts --outfile=./public/sw.js",
    "deploy": "flyctl deploy --remote-only",
    "dev": "npm run clean && run-p build:css build:fonts && pm2-dev ./other/pm2.config.js",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "wait-on ./build/index.js && cross-env NODE_ENV=development node --inspect --require esbuild-register --require dotenv/config ./server/index.ts",
    "dev:worker": "esbuild --watch --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' ./app/entry.worker.ts --outfile=./public/sw.js ",
    "generate:css": "tailwindcss --input ./app/styles/app.css --output ./app/styles/app.generated.css",
    "generate:fonts": "cpy \"./node_modules/@fontsource/source-sans-pro/files/source-sans-pro-latin-???-normal.*\" ./app/fonts/source-sans-pro",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "husky:install": "husky install",
    "prepare": "npm run --silent husky:install",
    "setup": "prisma migrate dev",
    "start": "cross-env NODE_ENV=production node ./build/server/index.js"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "4.5.11",
    "@prisma/client": "4.5.0",
    "@remix-run/express": "1.7.5",
    "@remix-run/node": "1.7.5",
    "@remix-run/react": "1.7.5",
    "@remix-run/serve": "1.7.5",
    "clsx": "1.2.1",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "express": "4.18.2",
    "lodash": "4.17.21",
    "marked": "4.2.2",
    "morgan": "1.10.0",
    "p-throttle": "5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.6.0",
    "remix": "1.7.5",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@remix-run/dev": "1.7.5",
    "@remix-run/eslint-config": "1.7.5",
    "@types/compression": "1.7.2",
    "@types/express": "4.17.14",
    "@types/lodash": "4.14.188",
    "@types/marked": "4.0.7",
    "@types/morgan": "1.9.3",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "@wkovacs64/prettier-config": "3.0.2",
    "autoprefixer": "10.4.13",
    "commitizen": "4.2.5",
    "cpy-cli": "4.2.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.15.13",
    "esbuild-register": "3.3.3",
    "eslint": "8.27.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pm2": "5.2.2",
    "postcss": "8.4.18",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "prisma": "4.5.0",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.5",
    "shelljs": "0.8.5",
    "tailwindcss": "3.2.2",
    "typescript": "4.8.4",
    "wait-on": "6.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
