{
  "name": "drinks-fly",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf .cache ./build ./public/build ./public/entry.worker.js ./**/*.generated.css",
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:fonts": "npm run generate:fonts",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs --bundle ./server/index.ts --outdir=build/server",
    "build:worker": "esbuild --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"' ./app/entry.worker.ts --outfile=./public/entry.worker.js",
    "deploy": "flyctl deploy --remote-only",
    "dev": "npm run clean && run-p build:css build:fonts && pm2-dev ./other/pm2.config.js",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "wait-on ./build/index.js && cross-env NODE_ENV=development node --inspect --require esbuild-register --require dotenv/config ./server/index.ts",
    "dev:worker": "esbuild --watch --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' ./app/entry.worker.ts --outfile=./public/entry.worker.js ",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "generate:css": "tailwindcss --input ./app/styles/app.css --output ./app/styles/app.generated.css",
    "generate:fonts": "cpy \"./node_modules/@fontsource/source-sans-pro/files/source-sans-pro-latin-???-normal.*\" ./app/fonts/source-sans-pro",
    "setup": "prisma migrate dev",
    "start": "cross-env NODE_ENV=production node ./build/server/index.js"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "4.5.10",
    "@prisma/client": "4.0.0",
    "@remix-run/express": "1.6.3",
    "@remix-run/node": "1.6.3",
    "@remix-run/react": "1.6.3",
    "@remix-run/serve": "1.6.3",
    "clsx": "1.1.1",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "express": "4.18.1",
    "lodash": "4.17.21",
    "marked": "4.0.17",
    "morgan": "1.10.0",
    "p-throttle": "5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.4.0",
    "remix": "1.6.3"
  },
  "devDependencies": {
    "@remix-run/dev": "1.6.3",
    "@remix-run/eslint-config": "1.6.3",
    "@types/compression": "1.7.2",
    "@types/express": "4.17.13",
    "@types/lodash": "4.14.182",
    "@types/marked": "4.0.3",
    "@types/morgan": "1.9.3",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@wkovacs64/prettier-config": "3.0.2",
    "autoprefixer": "10.4.7",
    "cpy-cli": "4.1.0",
    "esbuild": "0.14.48",
    "esbuild-register": "3.3.3",
    "eslint": "8.19.0",
    "npm-run-all": "4.1.5",
    "pm2": "5.2.0",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.11",
    "prisma": "4.0.0",
    "rimraf": "3.0.2",
    "shelljs": "0.8.5",
    "tailwindcss": "3.1.4",
    "typescript": "4.7.4",
    "wait-on": "6.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
